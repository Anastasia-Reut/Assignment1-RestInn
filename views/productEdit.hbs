<!DOCTYPE html>
<html>
	<head>
		<title>JASA online pharmacy - Edit Product</title>
		<meta charset="UTF-8" />
		<link rel="stylesheet" href="/css/theme.css" type="text/css" />
	</head>

	<body>
        <div class="container">
            {{> header user}}
            <div class="contentContainer">
                <h1>Edit Product</h1>
                <form method="POST" action="/product/edit">
                    {{#if product.product_id}}
                            <input type="hidden" name="product_id" value="{{product.product_id}}" />
                            <input type="hidden" name="edit" value="1"/>
                            <h4>Editing Product ID: {{product.product_id}}</h4>
                        {{else}}
                            <h4>Adding a New Product</h4>
                            <input type="hidden" name="edit" value="0"/>
                            <label class="fixedlabel">Product ID</label><input type="number" name="product_id" /><br/>
                        {{/if}}
                        <label class="fixedlabel">Product Name</label>
                        <input type="text" name="product_description" value="{{product.product_description}}" /><br/>
                        <label class="fixedlabel">Available in Stock</label>
                        <input type="text" name="available_stock" value="{{product.available_stock}}" /><br/>
                        <label class="fixedlabel">Price</label>
                        <input type="number" name="price" value="{{product.price}}" /><br/>
                        <label class="fixedlabel">Needs Prescription</label>
                        <input type="text" name="is_prescribed" value="{{product.is_prescribed}}" /><br/>
                        <label class="fixedlabel">Product Category ID</label>
                        <input type="text" name="product_category_id" value="{{product.product_category_id}}" /><br/>
                        <label class="fixedlabel">Product Category Name</label>
                        <input type="text" name="product_category_description" value="{{product.product_category_description}}" /><br/>
                        <label class="fixedlabel">Product Details</label>
                        <input type="text" name="product_detail" value="{{product.product_detail}}" /><br/>
                        <label class="fixedlabel">Product Image Path</label>
                        <input type="text" name="product_images_construct" value="{{product.product_images_construct}}" /><br/>
                        <label class="fixedlabel"></label>
                        <button type="submit" name="submit">Submit</button>
                    </form>
            </div>
            {{> footer}}
        </div>
	</body>
</html>